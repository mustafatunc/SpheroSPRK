<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/canvasback"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="240dp"
        android:background="@drawable/joysticktransp"
        android:layout_height="240dp"
        android:id="@+id/btnConnect"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/tvJoy"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free Control"/>

    <Button
        android:background="@drawable/penciltransp"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:id="@+id/btnDrawPath"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/tvDraw"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draw Your Own Path"/>
</LinearLayout>